<Window x:Class="SimpleXmlEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="XML AI Translator by Veloxcity" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Warning Button Style -->
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF9800"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F57C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#E0E0E0" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Modern Header -->
        <Border Grid.Row="0" Background="#1976D2" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸŒ" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="XML AI Translator" 
                                  FontSize="18" FontWeight="Bold" 
                                  Foreground="White"/>
                        <TextBlock Name="StatusText" Text="Ready" 
                                  FontSize="12" 
                                  Foreground="#E3F2FD"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Name="LoadBtn" Content="ðŸ“ Load" Click="LoadBtn_Click" 
                            Style="{StaticResource ModernButton}" Background="#4CAF50"/>
                    <Button Name="SaveBtn" Content="ðŸ’¾ Save" Click="SaveBtn_Click" 
                            Style="{StaticResource SuccessButton}"/>
                    <Button Name="SettingsBtn" Content="âš™ï¸ Settings" Click="SettingsBtn_Click" 
                            Style="{StaticResource ModernButton}"/>
                    <Button Name="StatsBtn" Content="ðŸ“Š Stats" Click="StatsBtn_Click" 
                            Style="{StaticResource ModernButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- AI Translation Panel -->
        <Border Grid.Row="1" Style="{StaticResource ModernCard}" Background="#E8F5E8" Margin="8,8,8,4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="ðŸ¤– AI Translation Center" 
                          FontSize="16" FontWeight="Bold" 
                          Foreground="#2E7D32" Margin="0,0,0,12"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button Name="TranslateSelectedBtn" Content="ðŸŽ¯ Translate Selected" 
                                Click="TranslateSelectedBtn_Click" 
                                Style="{StaticResource ModernButton}"/>
                        
                        <Border Background="White" CornerRadius="4" Padding="8,4" Margin="8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="First" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBox Name="PartialCountTxt" Text="100" Width="60" 
                                        BorderThickness="1" BorderBrush="#E0E0E0" 
                                        Padding="4" VerticalAlignment="Center"/>
                                <TextBlock Text="rows" VerticalAlignment="Center" Margin="4,0,8,0"/>
                                <Button Name="TranslatePartialBtn" Content="â–¶ï¸ Translate" 
                                        Click="TranslatePartialBtn_Click" 
                                        Style="{StaticResource ModernButton}" Background="#FF9800"/>
                            </StackPanel>
                        </Border>
                        
                        <Button Name="TranslateAllBtn" Content="ðŸš€ Translate All" 
                                Click="TranslateAllBtn_Click" 
                                Style="{StaticResource WarningButton}"/>

                        <!-- Control Buttons -->
                        <Button Name="PauseBtn" Content="â¸ï¸ Pause" 
                                Click="PauseBtn_Click" 
                                Style="{StaticResource ModernButton}" 
                                Background="#9E9E9E" 
                                Visibility="Collapsed"/>
                        
                        <Button Name="StopBtn" Content="â¹ï¸ Stop" 
                                Click="StopBtn_Click" 
                                Style="{StaticResource DangerButton}" 
                                Visibility="Collapsed"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Border Background="White" CornerRadius="4" Padding="12,6" Margin="8,0">
                            <TextBlock Name="CacheInfo" Text="ðŸ’¾ Cache: 0" 
                                      FontWeight="Medium" Foreground="#424242"/>
                        </Border>
                        <Button Name="ClearCacheBtn" Content="ðŸ—‘ï¸ Clear Cache" 
                                Click="ClearCacheBtn_Click" 
                                Style="{StaticResource DangerButton}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="8,4,8,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- DataGrid Card -->
            <Border Grid.Column="0" Style="{StaticResource ModernCard}" Margin="0,0,4,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="ðŸ“‹ Translation Data" 
                              FontSize="14" FontWeight="Bold" 
                              Foreground="#424242" Margin="0,0,0,12"/>

                    <DataGrid Grid.Row="1" Name="EntriesGrid" 
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             SelectionMode="Extended"
                             GridLinesVisibility="Horizontal"
                             AlternatingRowBackground="#FAFAFA"
                             HeadersVisibility="Column"
                             BorderThickness="0">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Foreground" Value="#424242"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="12,8"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Padding" Value="4"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="âœ“" Binding="{Binding IsSelected}" Width="50"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding StatusIcon}" Width="60" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Key" Binding="{Binding Key}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Original" Binding="{Binding Value}" Width="*"/>
                            <DataGridTextColumn Header="Translation" Binding="{Binding Translation}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Modern Activity Log Panel -->
            <Border Grid.Column="1" Style="{StaticResource ModernCard}" Margin="4,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Log Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Activity Log" 
                                      FontSize="14" FontWeight="Bold" 
                                      Foreground="#424242" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Button Grid.Column="1" Name="ClearLogBtn" Content="ðŸ—‘ï¸" 
                               Click="ClearLogBtn_Click" 
                               Style="{StaticResource ModernButton}" 
                               Background="#9E9E9E" 
                               Width="32" Height="32" 
                               Padding="0" FontSize="12"/>
                    </Grid>

                    <!-- Modern Log Display -->
                    <Border Grid.Row="1" Background="#1E1E1E" CornerRadius="6" Padding="0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                     HorizontalScrollBarVisibility="Auto"
                                     Padding="0">
                            <TextBox Name="LogTextBox" 
                                    TextWrapping="Wrap"
                                    FontFamily="Consolas, Monaco, 'Courier New'"
                                    FontSize="11"
                                    IsReadOnly="True"
                                    Background="Transparent"
                                    Foreground="#00E676"
                                    BorderThickness="0"
                                    Padding="12"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"/>
                        </ScrollViewer>
                    </Border>

                    <!-- Log Stats -->
                    <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="4" 
                           Padding="8" Margin="0,8,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="ðŸ•’ Real-time" 
                                      FontSize="10" Foreground="#666" 
                                      HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="1" Text="ðŸ”„ Auto-scroll" 
                                      FontSize="10" Foreground="#666" 
                                      HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Modern Progress Bar -->
        <Border Grid.Row="3" Background="#1976D2" Height="4" Margin="0">
            <ProgressBar Name="ProgressBar" 
                        Height="4" 
                        IsIndeterminate="False" 
                        Visibility="Collapsed"
                        Background="Transparent"
                        Foreground="#4CAF50"
                        BorderThickness="0"/>
        </Border>
    </Grid>
</Window>